      <%if current_user.books.present?%>
      <%current_user.books.each do |book| %>
        
        <div class="card mb-4 ml-2">
         <%= image_tag(book.image, height: '300', width: '750', class: "card-img-top")%>
          <div class="card-body">
            <h2 class="card-title"><%= book.title%></h2>
            <p class="card-text"><%= book.description%></p>
            <%= link_to 'Show', book, role: "button", class: "btn btn-primary btn-sm text-white" %>
            <%= link_to 'Edit', edit_book_path(book), class: "btn btn-sm btn-warning text-white"%>
            <%= link_to 'Delete', book_path(book),
                    method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger text-white" %>
            
            
          </div>
          <div class="card-footer text-muted">
             Added by <%= book.user.name %> 
          
          </div>
        </div>
         <% end %>
         <%else%>
          <div class="alert alert-warning" role="alert">
          Your bookshelf is empty! Please create new book
          </div>
        <% end %>  