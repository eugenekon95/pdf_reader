<p id="notice"><%= notice %></p>
<div class="container mt-5">
  <div class="row">
    <div class="col-sm-9 col-md-7 col-lg-6 mx-auto">
      <div class="card card-signin my-5">
        <div class="card-body">
          <h5 class="card-title text-center">Sign Up</h5>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
              <div class="form-label-group">
                <label for="inputUsername">Username</label>
                <%= f.text_field :name, autofocus: true,  class: "form-control", placeholder: "Username" %>
              </div>

              <div class="form-label-group">
                <label for="inputEmail">Email address</label>
                <%= f.email_field :email,  autocomplete: "email", type: "email",
                                  class: "form-control", placeholder: "Email address" %>
              </div>
              <div class="form-label-group mb-3">
                <label for="inputPassword">Password</label>
                <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %><br />
                <%= f.password_field :password, autocomplete: "new-password", type: "password",
                                     class: "form-control", placeholder: "Password"  %>
              </div>


              <div class="form-label-group mb-3">
                <label for="inputPasswordConfirmation">Password Confirmation</label>
                <% if @minimum_password_length %>
                  <em>(<%= @minimum_password_length %> characters minimum)</em>
                <% end %><br />
                <%= f.password_field :password_confirmation, autocomplete: "new-password", type: "password",
                                     class: "form-control", placeholder: "Password confirmation"  %>
              </div>

              <%= f.submit "Sign up", class: "btn btn-md btn-success btn-block", type: "submit" %>
              <hr class="my-4">
            <% end %>
         
        </div>
      </div>
    </div>
  </div>
</div>
